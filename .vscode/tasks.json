{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Targets",
            "type": "shell",
            "command": "${workspaceFolder}/CI/build.bat",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Clean Build Folder",
            "type": "shell",
            "command": "${workspaceFolder}/CI/build.bat",
            "args": [
                "clean"
            ],
            "group": {
                "kind": "build"
            }
        },
    ]
}